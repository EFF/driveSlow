html, body
    height 100%
body
    font-size 24px !important
header
    position relative
    top 0
    height 6.5em
    background-color rgb(40, 40, 40)
    z-index 5
    .speedContainer
        height 100%
        float left
        text-align center
        border 1px solid rgba(0, 0, 0, .4)
        h5
            color whitesmoke
            font-size 1em
            margin 1em 0 0 0
        span
            color gray
            transition all ease 0.5s
        .good
            color green
        .bad
            color red
        .speed
            font-size 2em
        .label
            font-size 1em
            font-weight 300
#map-canvas
    height -webkit-calc(100% - 6.5em)
    z-index 1
.shadowGood
    -webkit-box-shadow 0 20px 16px -16px green
    box-shadow 0 20px 16px -16px green
.shadowBad
    -webkit-box-shadow 0 20px 6px -6px red
    box-shadow 0 20px 6px -6px red
.logoContainer
    background-color rgb(40, 40, 40)
    width: 100%
    padding 0.5em 0 0.5em 0
    text-align center
    line-height 100%
.logo
    fill whitesmoke
    display: inline
    margin-left 1em
.logoText
    color whitesmoke
    font-size 1.5em

@media screen and (min-height: 568px)
    body
        font-size 44px !important
