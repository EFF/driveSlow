html, body
    height 100%
body
    font-size 24px !important
header
    top 0
    height 6.5em
    background-color rgb(40, 40, 40)
    .speedContainer
        height 100%
        float left
        text-align center
        border 1px solid rgba(0, 0, 0, .4)
        h5
            color whitesmoke
            font-size 1em
            margin 1em 0 0 0
        span
            color gray
        .speed
            font-size 2.5em
        .label
            font-size 1em
            font-weight 300
.map
    height: -webkit-calc(100% - 6.5em)
    background-color red
    color white
    font-size 1em

@media screen and (min-height: 568px)
    body
        font-size 44px !important
